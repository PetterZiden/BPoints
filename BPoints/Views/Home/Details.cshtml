@{
    User currentUser = ViewBag.user;
    User linkedUser = ViewBag.linkedUser;
}


<h1>@currentUser.UserName</h1>
<br />
<h4>Id: </h4><p>@currentUser.UserId</p>
<br />
<h4>Points: </h4><p>@currentUser.BPoints<p>
    <br />
    <h4>Linked User: </h4>
<p>@linkedUser.UserName</p>
<br />
<h4>Rewards available:</h4>
@foreach (Reward item in currentUser.RewardsToGet)
{
    <span>@item.RewardName</span>
    <br />

}
